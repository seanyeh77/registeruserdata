@model UserID

@{
    ViewData["Title"] = "Deleteuserdata";
}

<h1>刪除個人資料</h1>
<hr />
<h3>您確定要刪除個人資料嗎?</h3>
<div class="mb-5 row">
    <div class="col-sm-6 col-form-label">
        <div id="webcam"></div>
        <input class="btn btn-primary" type="button" id="btnCapture" value="截圖" />
    </div>
</div>
@using (Html.BeginForm("DeleteUserdata", "DeleteUserdata", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <hr />
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">* ID</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(
            model => model.ID,
            (IEnumerable<SelectListItem>) ViewBag.Items,
            new { @class="form-select" ,id="inputid",disabled = "disabled"}
            )
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <form asp-action="Deleteuserdata">
            <input type="submit" value="Delete" class="btn btn-danger" disabled="disabled" id="submit" />
        </form>
    </div>
}
@section scripts
    {
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="~/webcamjs/webcam.js"></script>
    <script type="text/javascript">
        $(function () {
            Webcam.set({
                width: 320,
                height: 240,
                image_format: 'jpeg',
                jpeg_quality: 90
            });
            Webcam.attach('#webcam');
            $("#btnCapture").click(function () {
                Webcam.snap(function (data_uri) {
                    var data = new FormData();
                    data.append("data", data_uri);
                    $.ajax({
                        type: "POST",
                        url: "/DeleteUserdata/Verify",
                        data: data,
                        dataType: "json",
                        contentType: false,
                        processData: false,
                        success: function (response) {
                            if (response == "position") {
                                document.getElementById("inputid").disabled = true;
                                document.getElementById("submit").disabled = true;
                                alert("您不符合資格，請聯繫管理員");
                            }
                            else if (response == "people") {
                                document.getElementById("inputid").disabled = true;
                                document.getElementById("submit").disabled = true;
                                alert("請前往註冊");
                            }
                            else if (response == "face") {
                                document.getElementById("inputid").disabled = true;
                                document.getElementById("submit").disabled = true;
                                alert("影像辨識錯誤");
                            }
                            else if (response == "connet") {
                                document.getElementById("inputid").disabled = true;
                                document.getElementById("submit").disabled = true;
                                alert("影像辨識發生錯誤");
                            }
                            else {
                                document.getElementById("inputid").disabled = false;
                                document.getElementById("submit").disabled = false;
                                alert("歡迎" + response);
                            }
                        },
                        Error: function (data) {
                            alert(data);
                        }
                    });
                });
            });
        });
    </script>
}